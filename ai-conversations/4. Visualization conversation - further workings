AI: 
    âœ… Improved get_weather_data() with Error Handling and Validation:
    python
    Copy
    Edit
    def get_weather_data(city="Perth", forecast_days=3):
        # Validate input
        if not isinstance(city, str) or not city.strip():
            print("âš ï¸ Please provide a valid city name.")
            return {"error": "Invalid city name"}
    
        if not isinstance(forecast_days, int) or forecast_days < 1:
            print("âš ï¸ Please enter a forecast value of at least 1 day.")
            return {"error": "Invalid forecast day count"}
    
        # wttr.in only provides a 3-day forecast
        if forecast_days > 3:
            print("âš ï¸ Only up to 3 days of forecast can be provided by wttr.in.")
            forecast_days = 3
    
        try:
            # Fetch data from wttr.in
            url = f"https://wttr.in/{city}?format=j1"
            response = requests.get(url)
            response.raise_for_status()  # Raises HTTPError if bad status
    
            data = response.json()
    
            # Current conditions
            current = data.get("current_condition", [{}])[0]
            weather_now = {
                "temp_C": current.get("temp_C", "N/A"),
                "condition": current.get("weatherDesc", [{}])[0].get("value", "Unknown")
            }
    
            print(f"\nğŸ“ Weather for {city}")
            print(f"ğŸŒ¡ï¸ Current Temperature: {weather_now['temp_C']}Â°C")
            print(f"â›… Condition: {weather_now['condition']}")
    
            # Forecast extraction
            forecast_data = []
            weather_days = data.get("weather", [])[:forecast_days]
    
            if weather_days:
                print("\nğŸ“… Temperature Forecast:")
                for day in weather_days:
                    forecast = {
                        "date": day.get("date", "Unknown"),
                        "min_temp_C": day.get("mintempC", "N/A"),
                        "max_temp_C": day.get("maxtempC", "N/A"),
                        "condition": day.get("hourly", [{}])[4].get("weatherDesc", [{}])[0].get("value", "Unknown")
                    }
                    forecast_data.append(forecast)
                    print(f"  â€¢ {forecast['date']}: {forecast['min_temp_C']}Â°C â€“ {forecast['max_temp_C']}Â°C, {forecast['condition']}")
            else:
                print("âš ï¸ No forecast data available.")
    
            return {
                "city": city,
                "current": weather_now,
                "forecast": forecast_data
            }
    
        except requests.exceptions.RequestException as req_err:
            print(f"\nâŒ Network or request error: {req_err}")
            return {"error": str(req_err)}
        except ValueError as json_err:
            print(f"\nâŒ Failed to parse response: {json_err}")
            return {"error": "Invalid JSON response"}
        except Exception as e:
            print(f"\nâŒ Unexpected error retrieving weather data: {e}")
            return {"error": str(e)}
    
